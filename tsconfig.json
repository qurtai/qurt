{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/App": [
        "src/App.tsx"
      ],
      "@/lib/*": [
        "src/lib/*"
      ],
      "@/components/*": [
        "src/components/*"
      ],
      "@/pages/*": [
        "src/pages/*"
      ],
      "@/hooks/*": [
        "src/hooks/*"
      ],
      "@/services/*": [
        "src/services/*"
      ],
      "@/types/*": [
        "src/types/*"
      ],
      "@/stores/*": [
        "src/stores/*"
      ],
      "@/templates/*": [
        "templates/*"
      ],
      "@/styles/*": [
        "styles/*"
      ],
      "@/constants/*": [
        "src/constants/*"
      ],
      "@/tools": [
        "src/tools/index.ts"
      ],
      "@/tools/*": [
        "src/tools/*"
      ],
      "@/mocks/*": [
        "src/mocks/*"
      ],
      "@/utils/*": [
        "src/utils/*"
      ],
      "@/electron/*": [
        "electron/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-electron",
    "electron"
  ]
}